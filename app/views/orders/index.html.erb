<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4><%= t ".my_order" %></h4>
      <div class="table-responsive">
        <table id="mytable" class="table table-bordred table-striped">
          <thead>
            <th><%= t ".order_code" %></th>
            <th><%= t ".receiver_name" %></th>
            <th><%= t ".receiver_address" %></th>
            <th><%= t ".total_price" %></th>
            <th><%= t ".date" %></th>
            <th><%= t ".status" %></th>
          </thead>
          <tbody>
            <% @orders.each do|bill| %>
            <tr>
              <td><%= link_to t("##{bill.id}"), order_path(bill.id) %>
              </td>
              <td><%= bill.receiver_name %></td>
              <td><%= bill.receiver_address %></td>
              <td class="text-danger"><%= number_to_currency bill.total_price %></td>
              <td><%= created_at_format bill.created_at %></td>
              <td class="text-primary"><%= bill.status %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="clearfix"></div>
        <div>
        <%= will_paginate @oders %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
        <h4 class="modal-title custom_align" id="Heading"><%= t ".delete_his" %></h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger">
          <span class="glyphicon glyphicon-warning-sign"></span><%= t ".you_sure" %>
        </div>
      </div>
      <div class="modal-footer ">
        <button type="button" class="btn btn-success" >
          <span class="glyphicon glyphicon-ok-sign"></span><%= t ".yes" %>
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <span class="glyphicon glyphicon-remove"></span><%= t ".no" %>
        </button>
      </div>
    </div>
  </div>
</div>
