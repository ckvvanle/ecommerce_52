<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t ".list_product" %></h1>
  </div>
</div>
<div class="panel-heading">
  <div class="col-md-offset-0 form_import">
    <%= form_tag(import_backend_products_path, multipart: true, method: :post) do %>
      <%= file_field_tag :file %>
      <%= submit_tag t ".import_file_CSV" %>
    <% end %>

    <%= search_form_for [:backend, @q], class: "form-inline" do |f| %>
      <div class="form-group">
        <%= f.select :category_id_eq, options_for_select(category_select), {include_blank: t("search.all")}, class: "form-control " %>
      </div>
      <div class="form-group">
        <%= f.search_field :name_cont, placeholder: t(".product_name") %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t ".list_product" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="text-center"><%= t ".no" %></th>
                <th class="text-center"><%= t ".name" %></th>
                <th class="text-center"><%= t ".price" %></th>
                <th class="text-center"><%= t ".quantity" %></th>
                <th class="text-center"><%= t ".description" %></th>
                <th class="text-center"><%= t ".picture" %></th>
                <th class="text-center"><%= t ".number_of_order" %></th>
                <th class="text-center"><%= t ".category" %></th>
                <th class="text-center" colspan="3"><%= t ".function" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @products %>
            </tbody>
          </table>
          <%= link_to t(".create_product"), new_backend_product_path, class: "btn btn-success" %>
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>
